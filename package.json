{
  "name": "messaging-acronyms-vault",
  "version": "1.0.0",
  "description": "REST API for the World Texting Foundation, also known as WTF.",
  "main": "lib/server.js",
  "repository": "git@github.com:donriddo/messaging-acronyms-vault.git",
  "author": "Ridwan Taiwo <donriddo@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf lib",
    "copy": "cpx \"src/**/*.json\" lib/",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "npm run clean && npm run lint && npm run copy && echo Using TypeScript && tsc --version && tsc --pretty",
    "test": "NODE_ENV=test mocha --exit --recursive  --require choma --timeout 8000 \"src/**/*.spec.ts\"",
    "serve": "npm run build && node lib/server.js",
    "coverage": "nyc --include=\"src/**/*.ts\" --reporter=text --reporter=html --reporter=lcov mocha --exit --recursive \"src/**/*.spec.ts\"",
    "report": "nyc yarn test && nyc report --reporter=text-lcov | coveralls",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "dev": "nodemon --exec \"node --require dotenv/config\" --watch lib lib/server.js",
    "inspect": "nodemon --exec \"node --inspect --require dotenv/config\" --watch lib lib/server.js",
    "prod": "node lib/server.js",
    "stag": "node lib/server.js"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.6.0",
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.168",
    "@types/mongoose": "5.10.2",
    "@types/validator": "^13.1.3",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-errors": "^1.8.0",
    "lodash": "^4.17.21",
    "lx-valid": "^1.2.4",
    "mongoose": "5.10.18",
    "mongoose-fuzzy-searching": "^2.0.2",
    "pluralize": "^8.0.0",
    "require-all": "^3.0.0",
    "route-decorators": "^0.2.2",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chai": "^4.3.4",
    "choma": "^1.2.1",
    "coveralls": "^3.1.0",
    "cpx": "^1.5.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.3.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": ">=8.0.0 <14.0.0",
    "yarn": "^1.16.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib",
      "src/server.ts",
      "src/db/*"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
